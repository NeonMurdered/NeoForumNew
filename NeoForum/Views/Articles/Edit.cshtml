@using NeoForum.Models.Enums
@model NeoForum.Models.Article

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование статьи</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-floating">
                <input asp-for="Title" class="form-control" />
                <label asp-for="Title" class="form-label"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Categories" asp-items="@new SelectList(Enum.GetNames(typeof(Categories)))" class="form-control">
                    <option selected disabled value="Select">Выберите категорию</option>
                </select>
                <label asp-for="Categories" class="form-label"></label>
                <span asp-validation-for="Categories" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Text" class="form-control txta" style="min-height:200px;"></textarea>
                <label asp-for="Text" class="form-label"></label>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-floating">                
                <input asp-for="Author" class="form-control" />
                <label asp-for="Author" class="form-label"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group cancel-form">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Назад</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
