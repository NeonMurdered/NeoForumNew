@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
  
<h2 class="main__title">Роли</h2>
<hr />
<a asp-action="Create" class="btn btn-primary btn-role"><i class="fa fa-plus" aria-hidden="true"></i> Создать новую роль</a>
 
<div class="role-list">
   <table class="table table-sm table-bordered table-bordered">
       <tr class="tr__main"><th>Название</th><th>Пользователи с данной ролью</th></tr>
       @foreach (var role in Model)
       {
           <tr>
               <td>@role.Name</td>
               <td i-role="@role.Id"></td>
               <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id"><i class="fa fa-wrench" aria-hidden="true"></i></a></td>
               <td>
                   <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                       <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                   </form>
               </td>
           </tr>
       }
   </table>
</div>